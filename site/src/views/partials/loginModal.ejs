<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="div-form d-flex flex-column align-items-center" id="div-form">
                    <form action="/login" method="POST">
                        <div class="text-center"><label for="user">Usuario</label></div>
                        <div class="text-center"><input class="rounded-pill border-0 mb-2" type="text" name="user" id="user-input"></div>
                        <div class="text-center"><label for="password">Contraseña</label></div>
                        <div class="text-center"><input class="rounded-pill border-0 mb-2" type="password" name="password" id="password-input"></div>
                        <div class="text-center mt-2"><button class="modal-login-button rounded-pill border-0" type="submit">Iniciar sesión</button></div>
                        <div class="text-center mt-3"><a class="modal-login-button rounded-pill" href="/register">Creá tu usuario</a></div>
                        <div class="text-center mt-3"><a href="/passwordRecovery">Olvidé mi contraseña</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>