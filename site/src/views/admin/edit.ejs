<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include('../partials/head') %>

<body>
    <section id="all-container">
        <!--Header-->
        <%- include('../partials/headerAdmin') %>
        <!--Modal de login-->
        <%- include('../partials/loginModal') %>
        <!-- Solapas -->
        <section>            
            <div class="solapas">
                <div class="titulo col-12">
                    <h3>Editor de  Productos</h3>
                </div>                
                <div>
                    <form method="POST" action="/edit/<%= moto.id%>?_method=PUT" enctype="multipart/form-data">
                        <div>                                                
                            <!-- Botones -->         
                            <div class="contenedor mt-1 ">            
                                <div class="formulario">
                                    <div class="formu">                                    
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="inputGroupSelect01">Marcas</label>
                                            </div>
                                            <select name="marca" class="custom-select" id="inputGroupSelect01">                                                
                                                <option value="Yamaha" <%= moto.marca == "Yamaha" ? "selected" : null %> >Yamaha</option>
                                                <option value="Honda" <%= moto.marca == "Honda" ? "selected" : null %>>Honda</option>
                                                <option value="BMW" <%= moto.marca == "BMW" ? "selected" : null %>>BMW</option>
                                                <option value="Mercedez-Benz" <%= moto.marca == "Mercedez-Benz" ? "selected" : null %>>Mercedes Benz</option>
                                                <option value="Kawasaki" <%= moto.marca == "Kawasaki" ? "selected" : null %>>Kawasaki</option>
                                                <option value="Ducati" <%= moto.marca == "Ducati" ? "selected" : null %>>Ducati</option>
                                                <option value="KTM" <%= moto.marca == "KTM" ? "selected" : null %>>KTM</option>
                                            </select>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text ">Modelo</span>
                                            </div>
                                            <textarea name="modelo" class="form-control" aria-label="With textarea"><%=moto.modelo%></textarea>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="inputGroupSelect01">Color</label>
                                            </div>
                                            <select name="color" class="custom-select" id="inputGroupSelect01">
                                                <option <%= moto.marca == "rojo" ? "selected" : null %> value="rojo">Rojo</option>
                                                <option <%= moto.marca == "negro" ? "selected" : null %> value="negro">Negro</option>
                                                <option <%= moto.marca == "azul" ? "selected" : null %> value="azul">Azul</option>
                                                <option <%= moto.marca == "gris" ? "selected" : null %> value="gris">Gris</option>
                                            </select>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Cilindrada</span>
                                            </div>
                                            <input value="<%= moto.cilindrada%>" class="form-control" type="number" name="cilindrada" id="cilindrada">
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="inputGroupSelect01">Frenos</label>
                                            </div>
                                            <select name="frenos" class="custom-select" id="inputGroupSelect01">
                                                <option <%= moto.marca == "Disco delantero" ? "selected" : null %> value="Disco delantero">Disco delantero</option>
                                                <option <%= moto.marca == "Disco delantero y trasero" ? "selected" : null %> value="Disco delantero y trasero">Disco delantero y trasero</option>
                                                <option <%= moto.marca == "Doble disco" ? "selected" : null %> value="Doble disco">Doble disco</option>                                                
                                            </select>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Cantidad</span>
                                            </div>
                                            <input value="<%= moto.stock%>" class="form-control" type="number" name="stock" id="stock">
                                        </div>                                        
                                        <hr>
                                        <!-- Precio -->
                                        <h5>Precio</h5>
                                        <div class="flex-container">                                     
                                            <div>   
                                                <h6>Moneda</h6>
                                                <div class="form-group btc">                                            
                                                    <select name="moneda" class="custom-select" id="validationCustom04" required>
                                                        <option <%= moto.moneda == "u$s" ? "selected" : null %> value="u$s">Dolar</option>
                                                        <option <%= moto.moneda == "$" ? "selected" : null %> value="$">Peso</option>
                                                        <option <%= moto.moneda == "€" ? "selected" : null %> value="€">Euro</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <h6>IVA</h6>
                                                <div class="form-group">
                                                    <input value="<%= moto.iva%>" type="number" class="form-control" name="iva" required value="">
                                                </div>
                                            </div>
                                            <div>
                                                <h6>Bruto</h6>
                                                <div class="form-group">
                                                    <input value="<%= moto.bruto%>" type="number" class="form-control" name="bruto" required value="">
                                                </div>
                                            </div>                                                       
                                        </div>
                                        <hr>                                  
                                    </div>
                                </div>                           
                            </div>
                        </div>
                        <div clas="container-fluid">
                                <div class="paso2 row">
                                    <!-- imagen portada -->                                
                                    <div class="fotop">
                                        <figure class=" col-12 col-md-6 col-lg-7  ">
                                            <h4>Imagen de la portada</h4>
                                            <img class="w-100 border-1 p-1" src="/asset/img/productos/<%= moto.imagenPortada%>" alt="imagen"> 
                                            <input type="hidden" name="oldImagenPortada"  value="<%= moto.imagenPortada%>">
                                            <input type="file" name="imagenPortada" class="botonImg">
                                        </figure>
                                    </div>                                
                                    <figure class=" col-12 col-md-6 col-lg-3 foto ">
                                        <img class="w-100 border-1 p-1" src="/asset/img/productos/<%= moto.imagen1%>" alt="imagen">
                                        <input type="hidden" name="oldImagen1"  value="<%= moto.imagen1%>">
                                        <input type="file" name="imagen1" class="botonImg" >
                                    </figure>
                                    <figure class=" col-12 col-md-6 col-lg-3 foto">
                                        <img class="w-100 border-1 p-1" src="/asset/img/productos/<%= moto.imagen2%>" alt="imagen">
                                        <input type="hidden" name="oldImagen2"  value="<%= moto.imagen2%>">
                                        <input type="file" name="imagen2" class="botonImg" >
                                    </figure>
                                    <figure class=" col-12 col-md-6 col-lg-3 foto">
                                        <img class="w-100 border-1 p-1" src="/asset/img/productos/<%= moto.imagen3%>" alt="imagen">
                                        <input type="hidden" name="oldImagen3"  value="<%= moto.imagen3%>">
                                        <input type="file" name="imagen3" class="botonImg" >
                                    </figure>
                                    <figure class=" col-12 col-md-6 col-lg-3 foto">
                                        <img class="w-100 border-1 p-1" src="/asset/img/productos/<%= moto.imagen4%>" alt="imagen">
                                        <input type="hidden" name="oldImagen4"  value="<%= moto.imagen4%>">
                                        <input type="file" name="imagen4" class="botonImg" >
                                    </figure>
                                    <div class="col-12">                                                
                                        <div class="custom--file">
                                            <div class="texta col-12 w-100">
                                                <p><label for="descripcion">Descripción</label></p> 
                                                <textarea name="descripcion" id="descripcion" cols="35" rows="8"><%= moto.descripcion%></textarea>
                                                <p><label for="especificaciones">Especificaciones</label></p> 
                                                <textarea name="especificaciones" id="especificaciones" cols="35" rows="8"><%= moto.especificaciones%></textarea>
                                            </div> 
                                            <div class="form-group guardar">
                                                <a href="/administrar" class="btm btn-primary">Volver</a>
                                                <button type="submit" class="btm">Guardar</button>
                                            </div>
                                        </div>
                                    </div>                                                                  
                                </div>
                        </div>                        
                    </form>    
                </div>                      
            </div>              
        </section>        
        <!--Footer-->
        <%- include('../partials/footer') %>
    </section> 
                            
    <!--Script de boostrap-->
    <%- include('../partials/scripts') %>
                            
</body>
                        
</html>